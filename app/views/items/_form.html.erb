<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <li class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :placeholder => "Item name" %> 
  </li>

  <li class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :placeholder => "Price" %> 
  </li>

  <li class="field">
    <%= f.label :group_id %><br />
    <%= f.select :group_id, @groups.collect {|c| [ c.name, c.id ]} %>
  </li>

  <li class="field">
    <%= f.label :avatar, "Item image" %><br />
    <%= f.file_field :avatar %>
  </li>

  <br/><br/><br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
